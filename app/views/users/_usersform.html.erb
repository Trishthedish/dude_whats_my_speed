

<section class="user_form">
  <div class="container">
    <div class="row">
      <div class= "col-xs-6">
        <%= form_for @myuser, method: @user_method, url: @user_path do |f| %>

          <div class="form-group row">
            <div class="col-md-10">
              <%= f.label :name %>
              <%= f.text_field :name %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-6">
              <%= f.label :service_provider %>
              <%= f.text_field :service_provider %>
            </div>
            <div class="col-md-6">
              <%= f.label :area_code %>
              <%= f.text_field :area_code %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :monthly_cost %>
            <%= f.text_field :monthly_cost %>
          </div>

          <div class="form-group row">
            <div class="col-md-6">
              <%= f.label :paid_upload %>
              <%= f.text_field :paid_upload %>
            </div>
            <div class="col-md-6">
              <%= f.label :paid_download %>
              <%= f.text_field :paid_download %>
            </div>
          </div>


          <div class="btn btn-lg">

            <%= f.submit %>
          </div>


        <% end %>
      </div>
    </div>
  </div>
</section>
